{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "strict": true,
    "incremental": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "#*": ["./packages/app/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["@types", "**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", ".next/types/**/*.ts"]
}
