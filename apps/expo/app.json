{
  "expo": {
    "name": "Weather Forecast",
    "slug": "weather-forecast",
    "version": "1.0.0",
    "scheme": "weather-forecast",
    "platforms": ["ios", "android"],
    "ios": {
      "bundleIdentifier": "com.weather.forecast"
    },
    "android": {
      "package": "com.weather.forecast"
    },
    "assetBundlePatterns": ["**/*", "../next/public/font/**/*"],
    "plugins": [
      "expo-font",
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location to provide weather information for your current location."
        }
      ]
    ],
    "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
  }
}
